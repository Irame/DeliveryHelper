<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/settings_autosort_open_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff=""
        android:text="@string/autosort_open_locations"
        android:background="@android:color/transparent"
        android:textOn=""
        android:button="@null"
        android:padding="20dp"
        android:checked="false"
        android:textColor="@android:color/primary_text_light"
        android:textAppearance="@android:style/TextAppearance.Medium"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/common_action_bar_splitter"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/settings_remoteaccess_enabled_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff=""
        android:text="@string/remote_access"
        android:background="@android:color/transparent"
        android:textOn=""
        android:button="@null"
        android:padding="20dp"
        android:checked="false"
        android:textColor="@android:color/primary_text_light"
        android:textAppearance="@android:style/TextAppearance.Medium"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:onClick="remoteAccessPortOnClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/remote_access_port"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="host:port"
            android:id="@+id/settings_host_port_label" />
    </LinearLayout>

</LinearLayout>